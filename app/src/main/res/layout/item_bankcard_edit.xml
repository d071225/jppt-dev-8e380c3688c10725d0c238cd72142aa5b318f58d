<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.hletong.hyc.ui.widget.CommonInputView
        android:id="@+id/cv_cardBank"
        style="@style/TransportForecast.View"
        android:background="@null"
        app:inputGravity="end|center_vertical"
        app:inputLabel="开户银行"
        app:lineBottomLeft="@dimen/margin_15dp"
        app:lineBottomRight="@dimen/margin_15dp"
        app:linePosition="bottom"
        app:mode="view" />

    <com.hletong.hyc.ui.widget.CommonInputView
        android:id="@+id/cv_cardNumber"
        style="@style/TransportForecast.View"
        android:background="@null"
        app:inputGravity="end|center_vertical"
        app:inputLabel="银行账号"
        app:lineBottomLeft="@dimen/margin_15dp"
        app:lineBottomRight="@dimen/margin_15dp"
        app:linePosition="bottom"
        app:mode="view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="right|center_horizontal"
        android:orientation="horizontal"
        android:paddingRight="@dimen/margin_15dp">

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/cb_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:drawableLeft="@drawable/bg_circle_checkbox_selector"
            android:text="设为默认" />

        <View
            android:layout_width="0dp"
            android:layout_height="1px"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/edit"
            style="@style/CargoEditModeAction"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_edit_cargo"
            android:text="编辑" />

        <TextView
            android:id="@+id/delete"
            style="@style/CargoEditModeAction"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:drawableLeft="@drawable/ic_delete_cargo"
            android:text="删除" />
    </LinearLayout>
</LinearLayout>

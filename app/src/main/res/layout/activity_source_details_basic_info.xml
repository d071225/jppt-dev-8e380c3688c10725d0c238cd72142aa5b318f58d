<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/special_req"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:lineSpacingMultiplier="1.3"
        android:paddingBottom="20dp"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_15dp"
        android:paddingTop="20dp"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/large_textsize"
        android:textStyle="bold"
        android:visibility="gone"/>

    <com.hletong.hyc.ui.widget.PriorityLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_15dp">
        <TextView
            android:id="@+id/cargoName"
            style="@style/RecyclerItemTitle"/>
        <TextView
            android:id="@+id/cargoDesc"
            style="@style/CargoWeight"
            android:layout_gravity="center_vertical"/>
    </com.hletong.hyc.ui.widget.PriorityLayout>
    <com.hletong.hyc.ui.widget.CommonInputView
        android:id="@+id/startAddress"
        style="@style/SourcePreview.Large"
        app:inputLabel="@string/from"
        app:inputText=""/>
    <com.hletong.hyc.ui.widget.CommonInputView
        android:id="@+id/endAddress"
        style="@style/SourcePreview.Large"
        app:inputLabel="@string/to"
        app:inputText=""
        android:layout_marginBottom="8dp"/>
    <com.hletong.hyc.ui.widget.CommonInputView
        android:id="@+id/model_req"
        style="@style/SourcePreview.Large"
        app:inputLabelAsTitle="false"
        app:inputLabelDrawable="@drawable/truck_model"
        android:layout_marginBottom="8dp"/>
    <com.hletong.hyc.ui.widget.CommonInputView
        android:id="@+id/loading_date"
        style="@style/SourcePreview.Large"
        app:inputLabelAsTitle="false"
        app:inputLabelDrawable="@drawable/loading_date"
        android:layout_marginBottom="8dp"/>
    <com.hletong.hyc.ui.widget.CommonInputView
        android:id="@+id/transport_days"
        android:visibility="gone"
        style="@style/SourcePreview.Large"
        app:inputLabelAsTitle="false"
        app:inputLabelDrawable="@drawable/transport_days_truck"
        android:layout_marginBottom="8dp"/>
    <com.hletong.hyc.ui.widget.CommonInputView
        android:id="@+id/deduct_tax"
        android:visibility="gone"
        style="@style/SourcePreview.Large"
        app:inputLabelAsTitle="false"
        app:inputLabelDrawable="@drawable/deduction_tax"
        android:layout_marginBottom="8dp"/>
    <com.hletong.hyc.ui.widget.CommonInputView
        android:id="@+id/confer"
        android:visibility="gone"
        style="@style/SourcePreview.Large"
        app:inputLabelAsTitle="false"
        app:inputLabelDrawable="@drawable/icon_money"
        android:layout_marginBottom="8dp"/>
    <com.hletong.hyc.ui.widget.CommonInputView
        style="@style/CommonInputViewNormalStyle.White"
        app:inputLabel="合计"
        android:id="@+id/bidPrice"
        app:inputHint="请输入合计金额"
        android:layout_marginBottom="8dp"
        app:inputCustomMethod="money"
        android:visibility="gone"/>
</LinearLayout>

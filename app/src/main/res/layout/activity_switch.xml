<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar style="@style/fitSystemWindowToolbar">

        <com.xcheng.view.widget.PagerSlidingTabStrip
            android:id="@id/ev_id_tab_indicator"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:minWidth="180dp"
            android:background="@drawable/nav_tab_background"
            android:padding="0dp"
            app:ev_pstsDividerColor="@color/white"
            app:ev_pstsDividerPadding="0dp"
            app:ev_pstsIndicatorHeight="0dp"
            app:ev_pstsShouldExpand="true"
            app:ev_pstsUnderlineHeight="0dp" />
    </android.support.v7.widget.Toolbar>

    <android.support.v4.view.ViewPager
        android:id="@id/ev_id_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
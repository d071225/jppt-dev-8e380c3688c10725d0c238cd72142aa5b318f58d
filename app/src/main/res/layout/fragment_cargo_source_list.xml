<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/common_recycler_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp"/>
    <include
        layout="@layout/alert_dialog_two_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/button_container"
        android:layout_gravity="bottom"/>
    <include
        layout="@layout/fragment_cargo_source_list_btn_draft"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="72dp"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="24dp"
        android:id="@+id/draft"/>
    <include
        layout="@layout/fragment_cargo_source_list_btn_scroll_to_top"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="156dp"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="24dp"
        android:visibility="gone"
        android:id="@+id/scroll_to_top"/>
</FrameLayout>

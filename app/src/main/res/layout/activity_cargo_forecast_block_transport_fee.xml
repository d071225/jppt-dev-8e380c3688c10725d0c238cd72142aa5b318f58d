<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.hletong.hyc.ui.widget.CommonInputView
        style="@style/CommonInputViewNormalStyle.White"
        app:inputLabel="运费是否议价"
        app:inputHint="请选择"
        app:mode="select"
        app:linePosition="none"
        android:id="@+id/bargain"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:background="@color/white"
        android:paddingLeft="@dimen/margin_15dp"
        android:paddingRight="@dimen/margin_15dp"
        android:paddingBottom="@dimen/margin_15dp"
        android:id="@+id/bargain_hint"
        android:visibility="gone"
        android:text="@string/bargain_hint"/>
    <com.hletong.hyc.ui.widget.CommonInputView
        style="@style/CommonInputViewNormalStyle.White"
        app:inputLabel="运费单价"
        app:inputHint="请输入运费单价"
        app:inputTextSuffix="元/吨"
        app:inputCustomMethod="money"
        android:id="@+id/freightPrice"/>
    <com.hletong.hyc.ui.widget.CommonInputView
        style="@style/CommonInputViewNormalStyle.White"
        app:inputLabel="运费总价"
        app:inputHint="运费总价"
        app:inputTextSuffix="元"
        app:mode="view"
        android:id="@+id/freightTotalPrice"/>
</LinearLayout>

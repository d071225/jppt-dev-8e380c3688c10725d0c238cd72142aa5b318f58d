<?xml version="1.0" encoding="utf-8"?>
<com.xcheng.view.widget.TopBarLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/topBarStyle"
    app:ev_topBarTitle="评价"
    tools:ignore="RtlHardcoded"
    android:background="@color/white"
    android:id="@+id/layout_root"
    android:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_15dp">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shape_circle_contact"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/avatar"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:id="@+id/top"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/name"
                style="@style/CommonTitleStyle"/>
            <com.hletong.hyc.ui.widget.RatingBar
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                app:starMargin="4dp"
                app:starDrawable="@drawable/star_small"
                app:asIndicator="true"/>
        </LinearLayout>
        <TextView
            android:id="@+id/favor_rate"
            style="@style/CommonTextStyle"
            android:textSize="?smallSize"
            android:layout_alignLeft="@id/top"
            android:layout_below="@id/top"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_grey"/>

        <TextView
            android:id="@+id/trade_count"
            style="@style/CommonTextStyle"
            android:textSize="?smallSize"
            android:layout_alignTop="@id/favor_rate"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_toRightOf="@id/favor_rate"
            android:textColor="@color/text_grey"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--这里加上foucus属性，不让最后面的edittext获取焦点-->
            <com.hletong.hyc.ui.widget.CommonInputView
                style="@style/Evaluation"
                app:inputLabel="业务单据号"
                android:id="@+id/bus_doc_no"
                android:focusable="true"
                android:focusableInTouchMode="true"/>
            <com.hletong.hyc.ui.widget.CommonInputView
                style="@style/Evaluation"
                app:inputLabel="车船号"
                android:id="@+id/carrier"/>
            <com.hletong.hyc.ui.widget.CommonInputView
                style="@style/Evaluation"
                app:inputLabel="品名"
                android:id="@+id/cargo_name"/>
            <com.hletong.hyc.ui.widget.CommonInputView
                style="@style/Evaluation"
                app:inputLabel="装货地"
                android:id="@+id/load"/>
            <com.hletong.hyc.ui.widget.CommonInputView
                style="@style/Evaluation"
                app:inputLabel="卸货地"
                android:id="@+id/unload"/>
            <com.hletong.hyc.ui.widget.CommonInputView
                style="@style/Evaluation"
                app:inputLabel="装货时间"
                android:id="@+id/load_time"
                android:visibility="gone"/>
            <com.hletong.hyc.ui.widget.CommonInputView
                style="@style/Evaluation"
                app:inputLabel="卸货时间"
                android:id="@+id/unload_time"
                android:visibility="gone"/>
            <com.hletong.hyc.ui.widget.CommonInputView
                style="@style/Evaluation"
                app:inputLabel="损益"
                android:id="@+id/loss"
                android:layout_marginBottom="10dp"
                android:visibility="gone"/>
            <com.hletong.hyc.ui.widget.CommonInputView
                style="@style/Evaluation"
                app:inputLabel="重量"
                android:id="@+id/count"
                android:layout_marginBottom="10dp"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="?android:windowBackground"/>
            <TextView
                style="@style/BlackTitle"
                android:id="@+id/immediate"
                android:layout_marginTop="28dp"
                android:text="及时性："/>
            <com.hletong.hyc.ui.widget.RatingBar
                style="@style/RatingBarStyle"
                android:id="@+id/immediate_rate"/>
            <TextView
                style="@style/BlackTitle"
                android:id="@+id/cargo"
                android:layout_marginTop="28dp"
                android:text="货损货差："/>
            <com.hletong.hyc.ui.widget.RatingBar
                style="@style/RatingBarStyle"
                android:id="@+id/cargo_rate"/>
            <TextView
                style="@style/BlackTitle"
                android:id="@+id/service"
                android:layout_marginTop="28dp"
                android:text="服务态度："/>
            <com.hletong.hyc.ui.widget.RatingBar
                style="@style/RatingBarStyle"
                android:id="@+id/service_rate"
                android:layout_marginBottom="13dp"/>
            <com.hletong.hyc.ui.widget.CountEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_15dp"
                android:padding="@dimen/margin_15dp"
                android:textSize="18sp"
                android:minHeight="144dp"
                android:maxLength="120"
                android:hint="其他建议"
                android:gravity="left|top"
                android:background="@drawable/shape_border_round_rect_25px"
                android:id="@+id/advice"/>
        </LinearLayout>
    </ScrollView>
    <TextView
        style="@style/normalButtonStytle"
        android:text="提交评价"
        android:id="@+id/submit"/>
</com.xcheng.view.widget.TopBarLayout>

<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="dialog_CommonStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <style name="dialog_loadingStyle" parent="dialog_CommonStyle">
        <item name="android:backgroundDimAmount">0.2</item>
    </style>

    <style name="dialog_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <style name="quick_option_dialog" parent="dialog_CommonStyle">
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
    </style>
    <style name="dialog_centerTip" parent="dialog_CommonStyle">
        <item name="android:windowBackground">@drawable/shape_bg_dialog_center</item>
    </style>
    <style name="DialogNoTitle" parent="dialog_CommonStyle">
        <item name="android:backgroundDimAmount">0.5</item>
    </style>
</resources>
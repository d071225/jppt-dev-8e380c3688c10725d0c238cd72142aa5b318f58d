<?xml version="1.0" encoding="utf-8"?>
<com.xcheng.view.widget.TopBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                     xmlns:app="http://schemas.android.com/apk/res-auto"
                                     xmlns:tools="http://schemas.android.com/tools"
                                     android:background="@color/white"
                                     app:ev_topBarTitle="@string/register_contract"
                                     style="@style/topBarStyle"
                                     tools:context="com.hletong.hyc.ui.activity.CompanyHistoryActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.3"
                android:paddingLeft="@dimen/margin_15dp"
                android:paddingTop="@dimen/margin_15dp"
                android:text="注册须知："
                android:textColor="@color/text_black"
                android:textSize="@dimen/normal_textsize"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.3"
                android:padding="@dimen/margin_15dp"
                android:text="@string/register_contract_detail"
                android:textColor="@color/text_black"
                android:textSize="@dimen/normal_textsize"/>

            <Button
                android:id="@+id/btn_registerEnsure"
                style="@style/submitStyle"
                android:text="@string/read_ensure"/>
        </LinearLayout>
    </ScrollView>
</com.xcheng.view.widget.TopBarLayout>

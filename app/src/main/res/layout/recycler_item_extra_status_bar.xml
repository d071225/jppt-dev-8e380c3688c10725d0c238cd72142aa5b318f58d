<?xml version="1.0" encoding="utf-8"?>
<com.hletong.mob.widget.BorderLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recycler_item_status_bar_height"
    android:background="@color/white"
    app:linePosition="bottom"
    app:lineBottomColor="@color/divider"
    android:paddingLeft="@dimen/margin_15dp"
    android:paddingRight="@dimen/margin_15dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/status"
        android:layout_weight="1"
        style="@style/StatusItemStyle"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/status_time"
        style="@style/StatusItemStyle"
        android:layout_gravity="end"
        android:textColor="@color/text_hint"/>
</com.hletong.mob.widget.BorderLinearLayout>